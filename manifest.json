{
    "manifest_version": 3,
    "name": "TTVplus",
    "version": "1.0",
    "description": "An enhancer for Twitch that modifies the UI.",
    "content_scripts": [
      {
        "matches": ["*://www.twitch.tv/*"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",
    "action": {
      "default_title": "TTVplus Settings",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["storage"],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  